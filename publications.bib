  year = {2021},
  series = {Applications of Cognitive Linguistics},
  number = {48},
  publisher = {{DE GRUYTER MOUTON}},
  address = {{Boston}},
  abstract = {In this paper, we revisit Geeraerts' (1985, 1988, 1997) case studies on the 19th century Dutch near-synonymous verb pair vernielen/vernietigen (`to destroy') in which he developed his Diachronic Prototype Semantics theory for explaining language variation and change. Using the statistical, corpus-based methodology of distributional semantics, we analyze the prototypical semantic structure of vernielen and vernietigen in contemporary Dutch and we discuss how the semantic change since the 19th century can be explained within a Cognitive-Sociolinguistic framework \textemdash{} and very much in line with the original studies \textemdash{} as resulting from the interaction of prototypicality effects and sociocultural factors.},
  copyright = {All rights reserved},
  isbn = {978-3-11-073851-3},
  keywords = {distributional semantics}
}

